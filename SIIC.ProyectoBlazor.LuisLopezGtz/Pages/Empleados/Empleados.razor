@page "/empleados"

@inject SweetAlertService Swal


<div class="row d-flex justify-content-center">
    <div class="card text-center">
        <div class="card-header">
            <button class="btn btn-success btn-block" data-toggle="modal" data-target="#EmpleadoModal" @onclick="CreateEmpleado">Agregar Empleado</button>
        </div>
        <div class="card-body">

            <table class="table table-hover table-responsive mw-100">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">RFC</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Direccion </th>
                        <th scope="col">Telefono </th>
                        <th scope="col">Correo </th>
                        <th scope="col">Activo </th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ListEmpleados)
                    {
                        <tr>
                            <td>@item.Rfc</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellidos</td>
                            <td>@item.Direccion</td>
                            <td>@item.Telefono</td>
                            <td>@item.Correo</td>
                            <td>@item.Activo</td>
                            <td><button class="btn btn-primary" data-toggle="modal" data-target="#EmpleadoModal" @onclick="(() => UpdateEmpleado(item))">Editar</button></td>
                            <td><button class="btn btn-danger" @onclick="(() => AlertAsyncDelete(item))">Eliminar</button></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="card-footer text-muted">
            Empleados
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="EmpleadoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header @BgMHeader">
                <h5 class="modal-title text-white" id="exampleModalLabel">@TitleModal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--Inicio-->

                <div class="form-group">

                    <label for="InputRFC">RFC</label>
                    <input type="text" class="form-control" id="InputRFC" placeholder="RFC" @bind="ObjEmpleado.Rfc">

                    <div class="row">

                        <div class="col-xl-6 col-lg-6 col-md-6 col-xl-6 col-sm-12">
                            <label for="InpuNombre">Nombre</label>
                            <input type="text" class="form-control" id="InpuNombre" placeholder="Nombre" @bind="ObjEmpleado.Nombre">
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-6 col-xl-6 col-sm-12">
                            <label for="InputApellidos">Apellidos</label>
                            <input type="text" class="form-control" id="InputApellidos" placeholder="Apellidos" @bind="ObjEmpleado.Apellidos">
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-6 col-xl-6 col-sm-12">
                            <label for="InputDireccion">Direccion</label>
                            <input type="text" class="form-control" id="InputDireccion" placeholder="Direccion" @bind="ObjEmpleado.Direccion">
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-6 col-xl-6 col-sm-12">
                            <label for="InputRazonTelefono">Telefono</label>
                            <input type="text" class="form-control" id="InputRazonTelefono" placeholder="Telefono" @bind="ObjEmpleado.Telefono">
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-6 col-xl-6 col-sm-12">
                            <label for="InputCorreo">Correo</label>
                            <input type="email" class="form-control" id="InputCorreo" placeholder="Correo" @bind="ObjEmpleado.Correo">
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-xl-6 col-sm-12">
                            <label for="InputActivo">Estatus</label>
                            <input type="checkbox" class="form-control" id="InputActivo" placeholder="Activo" @bind="ObjEmpleado.Activo">
                        </div>
                    </div>
                </div>

                <!--Fin-->

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="ResetEmpleado">Cerrar</button>
                <button type="button" class="btn @BtnSave" data-dismiss="modal" @onclick="SaveChanges">Guardar</button>
            </div>
        </div>
    </div>
</div>
